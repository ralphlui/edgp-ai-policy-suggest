# Test Environment Configuration
# Server Configuration
PORT=8092

# Environment
APP_ENV=test

# Authentication Microservice (MOCK for testing)
# Mock URL for auth service - should not hit real endpoint
admin.api.url=http://mock-auth-service:8999/api/admin

# Rules Microservice (MOCK for testing)
# Mock URL for rules service - should not hit real endpoint
rule.api.url=http://mock-rules-service:8998/api/rules

# API Configuration
API_TITLE=EDGP Policy Suggestion API (Test)
API_VERSION=1.0.0
API_DESCRIPTION=Data Quality Validation API using Great Expectations rules (Test Environment)

# CORS Configuration - More restrictive for testing
ALLOWED_ORIGINS=["http://localhost:8092","http://127.0.0.1:8092"]

# AWS Configuration for Testing (MOCK)
AWS_REGION=ap-southeast-1
# Mock AWS credentials - these should never be real
AOSS_HOST=mock-aoss-host.test.local
AWS_ACCESS_KEY_ID=MOCK_ACCESS_KEY_ID_FOR_TESTING
AWS_SECRET_ACCESS_KEY=MOCK_SECRET_ACCESS_KEY_FOR_TESTING

# OpenSearch Configuration for Testing (MOCK)
OPENSEARCH_INDEX=test-mdm-columns-mock
EMBED_MODEL=text-embedding-3-small
EMBED_DIM=1536

# OpenAI API Key Configuration for Testing (MOCK)
# Disable AWS Secrets Manager for testing - use mock environment variable
USE_AWS_SECRETS=false
OPENAI_API_KEY=mock-openai-api-key-sk-test123456789
OPENAI_SECRET_NAME=test/mock/secret

# JWT Bearer Token Authentication for Testing (MOCK)
# Mock RSA public key for testing JWT token verification (single line)
jwt.public.key=-----BEGIN PUBLIC KEY----------END PUBLIC KEY-----
JWT_ALGORITHM=RS256

# Logging Configuration for Testing
LOG_LEVEL=debug

# Test-specific configurations
# Disable external service calls during testing
DISABLE_EXTERNAL_CALLS=true
MOCK_AUTH_SERVICE=true
MOCK_OPENSEARCH=true
MOCK_AWS_SECRETS=true

# Test Database/Storage (Local mock directories)
TEST_DATA_DIR=./test_data
TEMP_TEST_FILES=./temp_test_files

# Mock API Keys and Secrets
MOCK_JWT_SECRET=mock-jwt-secret-for-testing-only
MOCK_ENCRYPTION_KEY=mock-encryption-key-12345678901234567890123456789012