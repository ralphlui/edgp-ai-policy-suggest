# Server Configuration
PORT=8091

# Environment
ENVIRONMENT=production


# Authentication Microservice
# URL to validate user profiles and permissions  
admin.api.url=http://localhost:8081/api/admin

# Rules Microservice
rule.api.url=http://localhost:8008/api/rules

# API Configuration
API_TITLE=EDGP Policy Suggestion API
API_VERSION=1.0.0
API_DESCRIPTION=Data Quality Validation API using Great Expectations rules

# CORS Configuration
# For development - allows common frontend dev servers
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8080","http://localhost:4200","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:8080","http://127.0.0.1:4200","http://127.0.0.1:5173","*"]

AWS_REGION=ap-southeast-1
# These values will be populated by Kubernetes into .env files
AOSS_HOST=AOSS_HOST
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY


OPENSEARCH_INDEX=mdm-columns
EMBED_MODEL=text-embedding-3-small
EMBED_DIM=1536

# OpenAI API Key Configuration
# Use AWS Secrets Manager for all environments (dev, testing, production)
USE_AWS_SECRETS=true
OPENAI_SECRET_NAME=prod/edgp/secret

# JWT Bearer Token Authentication
# JWT Configuration
# RSA public key for verifying JWT tokens (will be injected by Kubernetes)
jwt.public.key=jwt.public.key
JWT_ALGORITHM=RS256


LOG_LEVEL=info